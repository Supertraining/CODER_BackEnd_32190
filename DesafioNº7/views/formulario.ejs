
<h1 style="color:blue;" class="text-center">Ingrese un producto.</h1>
<br>
<div class="row align-items-center flex-column">
    <form class="w-50 border border-dark rounded p-3 mb-5" onsubmit="return addProduct()">
        <div class="form-group">
            <label for="nombre"><b>Nombre</b></label>
            <input id="nombre"
                class="form-control"
                type="text"
                name="nombre">
        </div>

        <div class="form-group">
            <label for="precio"><b>Precio</b></label>
            <input id="precio"
                class="form-control"
                type="text"
                name="precio">
        </div>

        <div class="form-group">
            <label for="imagen"><b>Imagen</b></label>
            <input id="imagen"
                class="form-control"
                type="text"
                name="imagen">
        </div>
        <input type="submit"
            id="btnProd"
            value="Enviar"
            class="m-1"><br>
    </form>
    <div class="d-flex">
     <form class="w-50 border border-dark rounded p-3 m-3" onsubmit="return deleteProduct()">
        <div class="form-group">
            <label for="id"><b>Eliminar producto ID:</b></label>
            <input id="idDelete"
                class="form-control"
                type="text"
                name="id">
        </div>
        <input type="submit"
        id="btnDelete"
        value="ELiminar"
        class="m-1"><br>
    </form> 
    <form class="w-50 border border-dark rounded p-3 m-3" onsubmit="return UpdateProduct()">
        <div class="form-group">
            <label for="id"><b>Actualizar producto ID:</b></label>
            <input id="idUpdate"
                class="form-control"
                type="text"
                name="idUpdt">
        </div>
        <input type="submit"
        id="btnUpdate"
        value="Actualizar"
        class="m-1"><br>
    </form>
    </div> 
</div>
<script src="./js/index.js"></script> 